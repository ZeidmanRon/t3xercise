datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

generator client {
    provider = "prisma-client-js"
}

model Exercise {
    id        String    @id @default(cuid())
    title     String
    desc      String    @db.VarChar(255)
    authorId  String
    updatedAt DateTime  @updatedAt
    workouts  Workout[]

    @@index([authorId])
}

model Workout {
    id        String     @id @default(cuid())
    title     String
    authorId  String
    updatedAt DateTime   @updatedAt
    exercises Exercise[]

    @@index([authorId])
}
