// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id         String  @unique
    fullName   String
    email      String?
    businessId String?
}

model Exercise {
    id         String    @id @default(cuid())
    name       String
    desc       String
    category   String
    authorId   String
    authorName String
    updatedAt  DateTime  @updatedAt
    workouts   Workout[]

    @@index([authorId])
}

model Workout {
    id         String     @id @default(cuid())
    title      String
    authorId   String
    authorName String
    updatedAt  DateTime   @updatedAt
    exercises  Exercise[]

    @@index([authorId])
}

model Business {
    id        String   @id @default(cuid())
    name      String
    ownerId   String
    createdAt DateTime @default(now())

    @@index([ownerId])
}
